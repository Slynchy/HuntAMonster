{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/esm",
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "baseUrl": "",
    "allowJs": false,
    "inlineSourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src"
  ]
}
